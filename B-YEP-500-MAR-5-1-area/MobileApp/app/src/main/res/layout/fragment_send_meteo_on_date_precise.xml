<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow1"
    tools:context=".modules.sendMeteoOnDatePrecise">

    <EditText
        android:id="@+id/minutes"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="mm"
        android:importantForAutofill="no"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/hour"
        app:layout_constraintTop_toBottomOf="@+id/city2"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/city2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="City"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/month"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="MM"
        android:importantForAutofill="no"
        android:maxLength="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/year"
        app:layout_constraintTop_toBottomOf="@+id/city2"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/hour"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="HH"
        android:importantForAutofill="no"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/day"
        app:layout_constraintTop_toBottomOf="@+id/city2"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/year"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="YYYY"
        android:importantForAutofill="no"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city2"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/day"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/grey1"
        android:ems="10"
        android:hint="DD"
        android:importantForAutofill="no"
        android:maxLength="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/month"
        app:layout_constraintTop_toBottomOf="@+id/city2"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="308dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Write a city and the date you want to know their temperature by mail"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/send2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey1"
        android:gravity="center"
        android:text="Send"
        android:textColor="@color/whitesmoke1"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_mustard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>